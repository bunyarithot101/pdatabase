<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:id="@+id/table_row_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/row_move"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"

                android:layout_weight="1"
                android:background="@drawable/row_line"
                android:fontFamily="@font/lato"
                android:gravity="center|center_horizontal|center_vertical"
                android:hapticFeedbackEnabled="false"
                android:hint="Move"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_power"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"

                android:background="@drawable/row_line"
                android:fontFamily="@font/lato"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="Power"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_acc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="1"

                android:background="@drawable/row_line"
                android:fontFamily="@font/lato"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="Accuracy"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_weight="1"

                android:background="@drawable/row_black"
                android:fontFamily="@font/lato"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="Type"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />


        </TableRow>
    </TableLayout>

</LinearLayout>